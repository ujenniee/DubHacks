{
  "manifest_version": 3,
  "name": "Immigrant Assistant",
  "version": "1.0",
  "description": "Helps translate and guide immigrants on any page",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "http://localhost:8000/*",
    "https://*/*",
    "http://*/*"
  ]
}
