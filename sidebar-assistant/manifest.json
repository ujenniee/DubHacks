{
  "manifest_version": 3,
  "name": "Sidebar Assistant",
  "version": "1.0",
  "description": "An AI assistant that lives in your sidebar.",
  "permissions": ["storage"],
  "host_permissions": ["http://localhost:3000/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["sidebar.html", "styles.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "sidebar.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  }
}
